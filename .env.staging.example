# Backend Environment Variables - STAGING

# Database
DATABASE_URL="postgresql://user:password@host:5432/bella_staging"

# JWT
JWT_SECRET="CHANGE_THIS_IN_STAGING"
JWT_REFRESH_SECRET="CHANGE_THIS_IN_STAGING"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Stripe - TEST KEYS
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_test_..."

# Server
PORT=3001
NODE_ENV="staging"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="bella-staging@yourdomain.com"
SMTP_PASS="your-app-password"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL="https://bella-staging.vercel.app"

# Monitoring (Optional)
SENTRY_DSN=""
